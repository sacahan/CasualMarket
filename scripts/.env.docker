# ============================================
# CasualMarket MCP Server - Docker 環境配置
# ============================================
# 此文件從 .env.docker.example 複製而來
# 請根據實際需求修改配置
# ============================================

# API 客戶端配置
MARKET_MCP_API_TIMEOUT=20
MARKET_MCP_API_RETRIES=2

# 限速配置
MARKET_MCP_RATE_LIMITING_ENABLED=false
MARKET_MCP_RATE_LIMIT_INTERVAL=5.0
MARKET_MCP_RATE_LIMIT_GLOBAL_PER_MINUTE=50
MARKET_MCP_RATE_LIMIT_PER_SECOND=5

# 快取配置
MARKET_MCP_CACHING_ENABLED=true
MARKET_MCP_CACHE_TTL=30
MARKET_MCP_CACHE_MAX_SIZE=1000
MARKET_MCP_CACHE_MAX_MEMORY_MB=200.0

# 監控配置
MARKET_MCP_MONITORING_STATS_RETENTION_HOURS=24
MARKET_MCP_MONITORING_CACHE_HIT_RATE_TARGET=80.0

# 日誌配置
MARKET_MCP_LOG_LEVEL=INFO

# Docker 特定配置
TZ=Asia/Taipei
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# 容器對外端口
DOCKER_PORT=8066
